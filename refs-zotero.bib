  number = {18},
  urldate = {2015-03-12},
  journal = {J. Phys. Chem. A},
  author = {Lee, Eun Cheol and Kim, Dongwook and Jure{\v c}ka, Petr and Tarakeshwar, P. and Hobza, Pavel and Kim, Kwang S.},
  month = may,
  year = {2007},
  pages = {3446--3457}
}

