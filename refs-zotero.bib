@article{HobzaJPC96,
  title = {Potential {{Energy Surface}} for the {{Benzene Dimer}}. {{Results}} of Ab {{Initio CCSD}}({{T}}) {{Calculations Show Two Nearly Isoenergetic Structures}}: {{T}}-{{Shaped}} and {{Parallel}}-{{Displaced}}},
