@article{GaoPRL15,
  title = {Sliding {{Mechanisms}} in {{Multilayered Hexagonal Boron Nitride}} and {{Graphene}}: {{The Effects}} of {{Directionality}}, {{Thickness}}, and {{Sliding Constraints}}},
